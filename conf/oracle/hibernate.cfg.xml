<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.password">stds</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
        <property name="hibernate.connection.username">stds</property>
<!--         <property name="hibernate.default_catalog">STDS</property> -->
        <property name="hibernate.default_schema">STDS</property>
        <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
        <property name="show_sql">true</property>
	    <property name="hibernate.current_session_context_class">org.hibernate.context.ThreadLocalSessionContext</property>
	    <property name="hbm2ddl.auto">update</property>
    </session-factory>
</hibernate-configuration>
